# Contributor: halhen <halhen at k2h dot se>
pkgname=shoutcast-search
pkgver=0.3.1
pkgrel=1
pkgdesc="Search shoutcast.com radio stations"
license=(GPL)
arch=('i686' 'x86_64')
url=http://code.k2h.se/
depends=('python2')
source=(http://www.k2h.se/code/dl/$pkgname-$pkgver.tar.gz)
md5sums=('a4c0bf6d9b8189f7147371f360e275dd')

build() {
cd $startdir/src/$pkgname-$pkgver
mkdir -p $startdir/pkg/usr/bin
sed '/import shoutcast_search/r shoutcast_search/shoutcast_search.py' shoutcast-search | sed '/import shoutcast_search/d' | sed 's/scs\.//g' | sed '1c #!/usr/bin/env python2' > $startdir/pkg/usr/bin/shoutcast-search
chmod 755 $startdir/pkg/usr/bin/shoutcast-search
mkdir -p $startdir/pkg/usr/man/man1
sed "s/0.3.1/$VERSION/g" < shoutcast-search.1 > $startdir/pkg/usr/man/man1/shoutcast-search.1
chmod 644 $startdir/pkg/usr/man/man1/shoutcast-search.1
install -D -m644 LICENSE $startdir/pkg/usr/share/licenses/$pkgname/LICENSE
}
